<html>
 <head>
  <title>WebCampBackendNew</title>
  <link rel="stylesheet" href="application.css"/>
 </head>

 <body>
  <p id="notice"><%= flash[:notice] %></p>
   <h1>Books</h1>
    <table>
      <thead>
       <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
       </tr>
      </thead>


     <tbody>
      <% @books.each do |book| %>
       <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show","/books/#{book.id}" %></td>
        <td><%= link_to "Edit","/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       </tr>
      <% end %>
     </tbody>
    </table>

 <h2>New Book</h2>

<% if @book.errors.any? %>
 <div id="error_explanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
   </ul>
 </div>
<% end %>

 <%= form_with model: @book, url: "/books", method: :post do |f| %>

 <div class="box">
   <h4>Title</h4>
   <%= f.text_field :title %>
 </div>

 <div class="box">
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>

 <div class="box">
  <%= f.submit 'Create Book' %>
 <% end %>
 </div>

 </body>